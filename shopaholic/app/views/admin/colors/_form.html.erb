<%= form_for [:admin, :product, @color] do |f| %>
  <% if @color.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @color.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table color-table">
    <tbody>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <td>
          <%= f.text_field :name, class: 'size-text-field' %>
        </td>
        <td>
          <%= f.fields_for :images, @color.images.build do |builder| %>
            <%= render 'image_fields', :f => builder %>
          <% end %>
          <div>
            <%= link_to_add_fields "Add More", f, :images %>
          </div>
        </td>
        <td>
          <%= f.submit %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
