<%= form_for [:admin, @color], remote: true do |f| %>
  <% if @color.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @color.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-striped color-table">
    <tbody>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      <tr>
        <td>
            <%= f.text_field :name, class: 'size-text-field' %>
        </td>
        <td>
          <%= f.submit %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
