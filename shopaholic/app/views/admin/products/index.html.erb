<h1>Listing products</h1>
<table class="table table-striped">
<% @products.each do |product| %>
    <td class="list_description">
      <dl>
        <dt>Title: <%= product.title %></dt>
        <dt>Description: <%= product.description %></dt>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-mini' %>
      <%= link_to 'Destroy', admin_product_path(product), method: :delete,
      data: { confirm: 'Are you sure?' }, class: 'btn btn-mini' %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New Product', new_admin_category_product_path %>
