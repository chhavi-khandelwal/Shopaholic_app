<%= form_for([:admin, @brand]) do |f| %>
  <% #FIXME_AB: Why using tag as local variable below -%>
  <%= render partial: '/errors', locals: { tag: @brand } %>

<div class='main-form'>
  <div>
    <div class='form-label'>
      <%= f.label :name, class: 'inliner-tile' %>
      <p class='mandatory'>*</p>
    </div>
    <div class='form-text'>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-action">
    <%= f.submit %>
  </div>
  <div id='mandatory-comment'>
    <p class='mandatory'>*mandatory field</p>
  </div>
</div>
<% end %>
