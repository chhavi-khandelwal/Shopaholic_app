<div class="head">
  <h3>Listing brands</h3>
</div>
<div class="head">
  <%= button_to 'New Brand', new_admin_brand_path, class: 'new-btn', method: :get %>
</div>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  <% @brands.each do |brand| %>
    <tr>
      <td class="list_description">
        <dl>
          <dt><%= brand.name %></dt>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to 'Edit', edit_admin_brand_path(brand), class: 'btn btn-mini' %>
        <%= link_to 'Destroy', admin_brand_path(brand), method: :delete,
        data: { confirm: "You are going to delete #{ brand.name } brand. Sure?" }, class: 'btn btn-mini' %>
      </td>
    </tr>
  <% end %>
</table>
