<h1>Listing categories</h1>
<table class="table table-striped">
  <% @categories.each do |category| %>
      <td class="list_description">
        <dl>
          <dt><%= category.name %></dt>
        </dl>
      </td>
      <td class="list_actions">
        <%= link_to 'Show Products', admin_category_products_path(category), class: 'btn btn-mini' %>
        <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-mini' %>
        <%= link_to 'Destroy', admin_category_path(category), method: :delete,
        data: { confirm: 'Are you sure?' }, class: 'btn btn-mini' %>
      </td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New Category', new_admin_category_path %>
